@model MVCMovie.Models.Review

@{
    ViewData["Title"] = "Create";
}
<h2>
    Write a review
</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reviewer" class="control-label"></label>
                <input asp-for="Reviewer" class="form-control" />
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userReview" class="control-label">Comment</label>
                <textarea asp-for="userReview" class="form-control" id="Comment" name="userReview"></textarea>
                <span asp-validation-for="userReview" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="movieID" class="control-label"></label>
                <input asp-for="movieID" class="form-control" value="@ViewData["thisMovieID"]" />
                <span asp-validation-for="movieID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" value="@ViewData["thisMovieTitle"]" />
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-default" href="/Movies/Details/@ViewData["thisMovieID"]">
                    Back to Movie Details
                </a>
            </div>
        </form>
    </div>
</div>