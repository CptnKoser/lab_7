@model MVCMovie.Models.Review
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Reviewer" class="control-label"></label>
                <input asp-for="Reviewer" class="form-control" />
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userReview" class="control-label">Comment</label>
                <textarea asp-for="userReview" class="form-control" id="Comment" name="userReview"></textarea>
                <span asp-validation-for="userReview" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="movieID" class="control-label"></label>
                <input asp-for="movieID" class="form-control" />
                <span asp-validation-for="movieID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" />
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-default" href="/Movies/Details/@Html.DisplayFor(model => model.movieID)">Back to Movie Details</a>
            </div>
        </form>
    </div>
</div>
